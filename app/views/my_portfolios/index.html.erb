<h1>Portfolio Items</h1>
<%= link_to "Create New Item", new_my_portfolio_path %>
<% @portfolio.each do |portfolio_item| %>
	<p><%= link_to portfolio_item.title, my_portfolio_path(portfolio_item) %></p>
	<p><%= portfolio_item.body %></p>
	<%= image_tag portfolio_item.thumb_image if !portfolio_item.thumb_image.nil?%>
	<%= link_to "Edit", edit_my_portfolio_path(portfolio_item) %>
	<%= link_to 'Delete', portfolio_item, method: :delete, data: { confirm: 'Are you sure?' } %>
<%end%>