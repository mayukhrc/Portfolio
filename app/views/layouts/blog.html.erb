<!DOCTYPE html>
<html>
  <head>
    <title><%= @page_title %></title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <meta name="keywords" contents="<%= @seo_keywords %>" />

    <%= stylesheet_link_tag 'blogs', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>

    
    <% if current_user.is_a?(User)#.first_name != "Guest" %>
      <%= link_to "Logout", destroy_user_session_path, method: :delete%>
      <p> <%= link_to "Edit Account", edit_user_registration_path%> </p>
    <% else %>
      <%= link_to "Register", new_user_registration_path%>
      <%= link_to "Login", new_user_session_path%>
    <% end %>

    <% if session[:source] %>
      <p>Thanks for visiting me from <%= session[:source] %></p>
    <% end %>

    <%= yield %>

    <div>
      <div><%= link_to "Home", root_path %></div><div><%= link_to "About", about_me_path %></div><div><%= link_to "Contact", contact_path %></div><div><%= link_to "Blogs", blogs_path %></div><div><%= link_to "Portfolios", my_portfolios_path %></div>
    </div>

  </body>
</html>